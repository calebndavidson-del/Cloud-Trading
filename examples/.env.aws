# Environment Variables for AWS Production Deployment

# Environment Configuration
ENV=production
DEBUG=false
USE_MOCK_DATA=false

# AWS Configuration
AWS_REGION=us-east-1

# These will be populated by Terraform outputs
DYNAMODB_CONFIG_TABLE=${dynamodb_config_table}
DYNAMODB_STATE_TABLE=${dynamodb_state_table}
DYNAMODB_TRADES_TABLE=${dynamodb_trades_table}

S3_BUCKET_LOGS=${s3_logs_bucket}
S3_BUCKET_DATA=${s3_data_bucket}

SECRETS_MANAGER_ARN=${secrets_manager_arn}

LAMBDA_FUNCTION_NAME=${lambda_function_name}

ECS_CLUSTER_NAME=${ecs_cluster_name}
ECS_SERVICE_NAME=${ecs_service_name}

# Trading Configuration
TRADING_ENABLED=true
PAPER_TRADING=true  # Set to false for live trading (use with extreme caution)

# Logging Configuration
LOG_LEVEL=INFO

# API Keys will be retrieved from AWS Secrets Manager
# Do not set these in environment variables in production