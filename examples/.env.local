# Environment Variables for Local Development

# Environment Configuration
ENV=development
DEBUG=true
USE_MOCK_DATA=true

# AWS Configuration (for local testing with LocalStack or AWS)
AWS_REGION=us-west-2
AWS_PROFILE=default

# DynamoDB Tables
DYNAMODB_CONFIG_TABLE=trading-bot-config-dev
DYNAMODB_STATE_TABLE=trading-bot-state-dev
DYNAMODB_TRADES_TABLE=trading-bot-trades-dev

# S3 Buckets
S3_BUCKET_LOGS=trading-bot-logs-dev
S3_BUCKET_DATA=trading-bot-data-dev

# Secrets Manager
SECRETS_MANAGER_ARN=arn:aws:secretsmanager:us-west-2:123456789012:secret:trading-bot-secrets-dev

# Lambda Configuration
LAMBDA_FUNCTION_NAME=trading-bot-data-fetcher-dev

# ECS Configuration
ECS_CLUSTER_NAME=trading-bot-cluster-dev
ECS_SERVICE_NAME=trading-bot-strategy-dev
ECS_TASK_DEFINITION=trading-bot-strategy-task-dev

# Trading Configuration
TRADING_ENABLED=false
PAPER_TRADING=true

# Logging Configuration
LOG_LEVEL=DEBUG

# API Keys (use environment variables or AWS Secrets Manager)
# YAHOO_API_KEY=your_yahoo_api_key_here
# ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here